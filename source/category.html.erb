---
pageable: true
per_page: 12
---

<div class="row">
	<div class="small-12">
		<% if paginate && num_pages > 1 %>
		  <p>Page <%= page_number %> of <%= num_pages %></p>
		<% end %>
	</div>
	<div data-equalizer data-equalizer-mq="medium-up">
		<% page_articles.each_with_index do |article, i| %>
			<article class="small-12 medium-6 large-4 columns article-listing" data-equalizer-watch>
				  <h2><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2>
				  <!-- use article.summary(250) if you have Nokogiri available to show just
				       the first 250 characters -->
				  <%= article.body %>
			</article>
		<% end %>
		</div>
		<% if paginate %>
		<div class="row">
			<div class="small-6 columns">
			  <% if prev_page %>
			    <p><%= link_to 'Previous page', prev_page %></p>
			  <% end %>
			</div>
			<div class="small-6 columns">
			  <% if next_page %>
			    <p><%= link_to 'Next page', next_page %></p>
			  <% end %>
			</div>
		<% end %>
	</div>
</div>